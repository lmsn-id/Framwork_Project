{
  "dependencies": {
    "@tailwindcss/cli": "^4.0.7",
    "tailwindcss": "^4.0.7"
  },
  "scripts": {
    "build": "tailwindcss build styles.css -o tailwindcss.css",
    "dev": "npx tailwindcss -i public/css/style.css -o public/css/tailwindcss.css --watch",
    "start": "nodemon --ext php --exec \"php lmsn\"",
    "serve": "concurrently --kill-others \"npm run dev\" \"npm run start\""
  },
  "devDependencies": {
    "nodemon": "^3.1.0",
    "concurrently": "^8.2.1"
  }
}
